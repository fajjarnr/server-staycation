<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include('../../partials/message.ejs') %>
        <!-- Page Heading -->
        <% if(action == "view") { %>
        <h1 class="h3 mb-4 text-gray-800">Item</h1>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#show-item"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Show Item</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#add-item"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Add Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show item -->
          <%- include('show_table_item.ejs') %>
          <!-- add item -->
          <%- include('add_item.ejs') %>
        </div>
        <% } else if(action == 'show image') { %>
        <a href="/admin/item" class="btn btn-warning mb-3">
          <i class="fas fa-arrow-left"></i> Back</a
        >
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#show-image"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Show Image</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- show image -->
          <%- include('show_image_item.ejs') %>
        </div>
        <% } else { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#edit-item"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Edit Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- edit item -->
          <%- include('edit_item.ejs') %>
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../../partials/logout.ejs') %>

<!-- javascript library -->
<%- include('../../partials/js.ejs') %>
<script>
  CKEDITOR.replace("about");
</script>
